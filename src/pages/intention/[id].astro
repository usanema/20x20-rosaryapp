---
import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";
import {
    Card,
    CardHeader,
    CardTitle,
    CardContent,
    CardFooter,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Calendar, Users } from "lucide-react";
import { getCurrentWeek, getMysteryForSlot } from "../../lib/rosary";

export const prerender = false;

const { id } = Astro.params;

// 1. Fetch details
const { data: intention, error: intentionError } = await supabase
    .from("intentions")
    .select("*")
    .eq("id", id)
    .single();

if (intentionError || !intention) {
    return new Response("Nie znaleziono intencji.", { status: 404 });
}

// 2. Fetch participants
const { data: participants, error: participantsError } = await supabase
    .from("participants")
    .select("*")
    .eq("intention_id", id)
    .order("slot", { ascending: true });

let pError = "";
let formSuccess = false;

// 3. Handle Form if POST
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const firstName = String(formData.get("firstName") || "").trim();
    const lastName = String(formData.get("lastName") || "").trim();
    const email = String(formData.get("email") || "").trim();

    if (!firstName) {
        pError = "Imię jest wymagane.";
    } else {
        // Find first empty slot
        const takenSlots = new Set((participants || []).map((p) => p.slot));
        let nextSlot = -1;
        for (let i = 1; i <= 20; i++) {
            if (!takenSlots.has(i)) {
                nextSlot = i;
                break;
            }
        }

        if (nextSlot === -1) {
            pError = "Niestety, wszystkie miejsca (20) są już zajęte.";
        } else {
            const { error: insertError } = await supabase
                .from("participants")
                .insert([
                    {
                        intention_id: id,
                        first_name: firstName,
                        last_name: lastName || null,
                        email: email || null,
                        slot: nextSlot,
                    },
                ]);

            if (insertError) {
                if (insertError.code === "23505") {
                    pError = "Ktoś właśnie zajął to miejsce! Spróbuj ponownie.";
                } else {
                    pError = "Błąd dołączania: " + insertError.message;
                }
            } else {
                formSuccess = true;
                // Zreloaduj aby wczytać nowego uczestnika bez przekierowań (Astro)
                // Można zwrócić Redirect na sam siebie żeby wyczyścić POST state.
                return Astro.redirect(`/intention/${id}`);
            }
        }
    }
}

// Build table data
const weekNumber = getCurrentWeek(intention.start_date);

const slotsData = Array.from({ length: 20 }, (_, i) => {
    const slotNumber = i + 1;
    const participant = (participants || []).find((p) => p.slot === slotNumber);
    const mystery = getMysteryForSlot(slotNumber, weekNumber);

    return {
        slotNumber,
        participant,
        mystery,
    };
});
---

<Layout title={`Różaniec - ${intention.title}`}>
    <div
        class="mb-8 flex items-center justify-between animate-in fade-in slide-in-from-top-4 duration-500"
    >
        <a
            href="/"
            class="inline-flex items-center justify-center rounded-full bg-white/60 hover:bg-white border border-white/40 shadow-sm h-10 px-4 text-sm font-medium text-muted-foreground hover:text-black transition-all space-x-2"
            ><span>&larr;</span> <span>Intencje</span>
        </a>
        <Badge
            variant={intention.status === "active" ? "default" : "secondary"}
            className={`rounded-full px-4 py-1.5 text-sm font-medium shadow-sm ${
                intention.status === "active"
                    ? "bg-primary/10 text-primary border-primary/20"
                    : ""
            }`}
        >
            {intention.status === "active" ? "W trakcie" : "Zakończona"}
        </Badge>
    </div>

    <Card
        className="glass border-white/40 shadow-xl shadow-black/5 rounded-[2rem] mb-8 lg:mb-12 overflow-hidden relative animate-in fade-in slide-in-from-bottom-8 duration-700"
    >
        <div
            class="absolute inset-0 bg-gradient-to-br from-white/40 to-transparent z-0"
        >
        </div>
        <div class="absolute top-0 right-0 p-4 md:p-8 opacity-5">
            <Users className="w-24 h-24 md:w-32 md:h-32 text-primary" />
        </div>
        <CardHeader className="pb-4 pt-6 md:pt-10 px-6 md:px-10 relative z-10">
            <CardTitle
                className="text-xl md:text-3xl font-semibold leading-tight text-black max-w-[90%] sm:max-w-[85%]"
            >
                {intention.title}
            </CardTitle>
        </CardHeader>
        <CardContent className="px-6 md:px-10 pb-8 md:pb-10 relative z-10">
            <div
                class="flex flex-col sm:flex-row gap-3 sm:gap-6 text-sm font-medium text-muted-foreground relative z-10 sm:items-center sm:mr-10"
            >
                <div
                    class="flex items-center gap-2 bg-white/50 backdrop-blur-md px-4 py-2 rounded-full border border-white/60 shadow-sm w-fit"
                >
                    <Calendar className="w-4 h-4 opacity-70" /> Start: <span
                        class="text-black ml-0.5"
                        >{
                            new Date(intention.start_date).toLocaleDateString(
                                "pl-PL"
                            )
                        }</span
                    >
                </div>

                <div
                    class="flex items-center gap-2 bg-white/50 backdrop-blur-md px-4 py-2 rounded-full border border-white/60 shadow-sm w-fit"
                >
                    <Users className="w-4 h-4 opacity-70" /> Aktualny tydzień: <strong
                        class="text-black ml-1 text-base">{weekNumber}</strong
                    >
                </div>
            </div>
        </CardContent>
    </Card>

    <div
        class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start animate-in fade-in slide-in-from-bottom-12 duration-700 delay-150"
    >
        <div class="lg:col-span-2 space-y-6">
            <div class="flex items-center justify-between px-2">
                <h3
                    class="text-2xl font-semibold tracking-tight text-black flex items-center gap-3"
                >
                    Rozkład Modlitwy
                </h3>
                <span
                    class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium border border-primary/20"
                    >{participants?.length || 0}/20 Miejsc</span
                >
            </div>

            <div
                class="glass rounded-[2rem] border border-white/40 overflow-hidden shadow-xl shadow-black/5"
            >
                <div class="overflow-x-auto">
                    <table class="w-full text-sm">
                        <thead
                            class="bg-white/40 border-b border-white/40 [&_th]:font-semibold [&_th]:text-black [&_th]:py-4 [&_th]:px-4 sm:[&_th]:px-6 [&_th]:text-left backdrop-blur-sm"
                        >
                            <tr>
                                <th class="w-10 sm:w-12 text-center">#</th>
                                <th class="min-w-[100px] sm:min-w-[120px]"
                                    >Uczestnik</th
                                >
                                <th class="min-w-[160px] sm:min-w-[200px]"
                                    >Tajemnica <span class="hidden sm:inline"
                                        >(Tydzień {weekNumber})</span
                                    >
                                </th>
                                <th class="text-right hidden md:table-cell"
                                    >Grupa</th
                                >
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-white/20">
                            {
                                slotsData.map(
                                    ({ slotNumber, participant, mystery }) => (
                                        <tr class="hover:bg-white/40 transition-colors">
                                            <td class="py-4 px-4 sm:px-6 text-center font-semibold text-muted-foreground/50">
                                                {slotNumber}
                                            </td>
                                            <td class="py-4 px-4 sm:px-6">
                                                {participant ? (
                                                    <span class="font-medium text-black">
                                                        {participant.first_name}{" "}
                                                        {participant.last_name ||
                                                            ""}
                                                    </span>
                                                ) : (
                                                    <span class="text-muted-foreground italic text-xs sm:text-sm">
                                                        Wolne miejsce
                                                    </span>
                                                )}
                                            </td>
                                            <td class="py-3 px-3 sm:px-4 text-black">
                                                <span class="line-clamp-2 md:line-clamp-1 leading-tight">
                                                    {mystery.name}
                                                </span>
                                                <span class="block md:hidden text-xs text-muted-foreground mt-0.5">
                                                    {mystery.groupName}
                                                </span>
                                            </td>
                                            <td class="py-3 px-4 text-right hidden md:table-cell">
                                                <Badge
                                                    variant="outline"
                                                    className="border-black/10 text-muted-foreground font-normal bg-white/50"
                                                >
                                                    {mystery.groupName}
                                                </Badge>
                                            </td>
                                        </tr>
                                    )
                                )
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {/* Formularz lub Info */}
        <div class="lg:sticky lg:top-8">
            {
                (participants?.length || 0) < 20 ? (
                    <Card className="glass border-white/40 shadow-xl shadow-black/5 rounded-[2rem] relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-br from-white/50 to-transparent pointer-events-none" />
                        <form method="POST" class="relative z-10">
                            <CardHeader className="px-6 pt-8 pb-4">
                                <CardTitle className="text-2xl font-semibold text-black">
                                    Dołącz do modlitwy
                                </CardTitle>
                            </CardHeader>
                            <CardContent className="space-y-5 px-6">
                                {pError && (
                                    <div class="p-3 text-sm text-red-600 bg-red-50 rounded-lg border border-red-100">
                                        {pError}
                                    </div>
                                )}
                                <div class="space-y-2">
                                    <Label
                                        htmlFor="firstName"
                                        className="text-black font-semibold"
                                    >
                                        Imię <span class="text-red-500">*</span>
                                    </Label>
                                    <Input
                                        id="firstName"
                                        name="firstName"
                                        required
                                        className="rounded-2xl h-11 bg-white/60 focus:bg-white text-base shadow-inner border-white/50 focus-visible:ring-primary/30 transition-all duration-300"
                                        placeholder="np. Jan"
                                    />
                                </div>
                                <div class="space-y-2">
                                    <Label
                                        htmlFor="lastName"
                                        className="text-black font-medium"
                                    >
                                        Nazwisko{" "}
                                        <span class="text-muted-foreground/60 font-normal">
                                            (opcjonalnie)
                                        </span>
                                    </Label>
                                    <Input
                                        id="lastName"
                                        name="lastName"
                                        className="rounded-2xl h-11 bg-white/60 focus:bg-white text-base shadow-inner border-white/50 focus-visible:ring-primary/30 transition-all duration-300"
                                        placeholder="Kowalski"
                                    />
                                </div>
                                <div class="space-y-2">
                                    <Label
                                        htmlFor="email"
                                        className="text-black font-medium"
                                    >
                                        Email{" "}
                                        <span class="text-muted-foreground/60 font-normal">
                                            (opcjonalnie)
                                        </span>
                                    </Label>
                                    <Input
                                        id="email"
                                        name="email"
                                        type="email"
                                        className="rounded-2xl h-11 bg-white/60 focus:bg-white text-base shadow-inner border-white/50 focus-visible:ring-primary/30 transition-all duration-300"
                                        placeholder="jan@example.com"
                                    />
                                </div>
                            </CardContent>
                            <CardFooter className="px-6 pb-8">
                                <Button
                                    type="submit"
                                    className="w-full rounded-full h-12 text-base font-medium transition-all hover:scale-[1.02] active:scale-95 shadow-lg shadow-primary/20 bg-primary/95 hover:bg-primary"
                                >
                                    Zajmij miejsce
                                </Button>
                            </CardFooter>
                        </form>
                    </Card>
                ) : (
                    <Card className="glass shadow-xl shadow-black/5 rounded-[2rem] bg-gradient-to-br from-primary/10 to-transparent border border-primary/20 p-2">
                        <CardHeader>
                            <CardTitle className="text-2xl text-primary font-semibold flex items-center gap-2">
                                Pełna grupa
                            </CardTitle>
                        </CardHeader>
                        <CardContent>
                            <p class="text-sm text-muted-foreground">
                                Do tej intencji dołączyło już 20 unikalnych
                                osób. Lista odmawiania jest kompletna i
                                uformowana.
                            </p>
                        </CardContent>
                    </Card>
                )
            }
        </div>
    </div>
</Layout>
