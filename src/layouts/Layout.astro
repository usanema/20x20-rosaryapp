---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Aplikacja grupowego Różańca w intencji"
        />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, maximum-scale=1"
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="min-h-screen bg-[#fafafa] text-foreground font-sans selection:bg-primary/20 relative overflow-x-hidden"
    >
        <!-- Animated Background -->
        <div class="fixed inset-0 pointer-events-none z-0">
            <div class="absolute inset-0 bg-[#fafafa]"></div>

            <!-- Radial gradients animated -->
            <div
                class="absolute -top-[20%] -left-[10%] w-[70vw] h-[70vw] rounded-full bg-[radial-gradient(circle_at_center,theme(colors.primary/0.15),transparent_60%)] animate-float"
                style="animation-duration: 15s;"
            >
            </div>
            <div
                class="absolute top-[40%] -right-[20%] w-[60vw] h-[60vw] rounded-full bg-[radial-gradient(circle_at_center,theme(colors.orange.400/0.1),transparent_60%)]"
                style="animation: float 20s ease-in-out infinite reverse;"
            >
            </div>
            <div
                class="absolute -bottom-[20%] left-[10%] w-[80vw] h-[60vw] rounded-full bg-[radial-gradient(circle_at_center,theme(colors.rose.400/0.05),transparent_60%)] animate-float"
                style="animation-duration: 25s;"
            >
            </div>

            <!-- Subtle noise overlay -->
            <svg
                class="absolute inset-0 w-full h-full opacity-[0.015] mix-blend-overlay"
                xmlns="http://www.w3.org/2000/svg"
            >
                <filter id="noise">
                    <feTurbulence
                        type="fractalNoise"
                        baseFrequency="0.8"
                        numOctaves="4"
                        stitchTiles="stitch"></feTurbulence>
                </filter>
                <rect width="100%" height="100%" filter="url(#noise)"></rect>
            </svg>
        </div>

        <main
            class="max-w-4xl mx-auto px-4 sm:px-6 py-10 md:py-20 relative z-10 flex flex-col min-h-screen"
        >
            <header
                class="mb-10 text-center animate-in fade-in slide-in-from-bottom-4 duration-700 ease-out"
            >
                <h1
                    class="text-4xl md:text-5xl font-semibold tracking-tight text-black mb-3"
                >
                    Różaniec
                </h1>
                <p
                    class="text-base md:text-lg text-muted-foreground max-w-lg mx-auto leading-relaxed"
                >
                    Wspólna modlitwa w jednej intencji. Ścisły cykl zmieniający
                    się co tydzień.
                </p>
            </header>

            <div class="flex-1">
                <slot />
            </div>

            <footer
                class="mt-20 py-8 text-center text-sm text-muted-foreground/60"
            >
                &copy; {new Date().getFullYear()} Różaniec. Projekt prywatny.
            </footer>
        </main>
    </body>
</html>
